generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserStatus {
  active
  suspended
  deleted
}

enum ProfileCompletionStatus {
  incomplete
  complete
}

enum LookingForNow {
  serious_relationship
  intentional_connection
  reentering_dating
}

enum ConflictStyle {
  cool_off_then_talk
  talk_now_calm
  withdraw_when_escalates
  needs_structure
}

enum NonNegotiable {
  repeated_lying
  disrespect
  anger_aggression
  infidelity
  problematic_use
  emotional_unavailability
  control_jealousy
  disappearing_silence
}

enum RhythmMeeting {
  weekly
  biweekly
  flexible
}

enum RhythmCommunication {
  daily_short
  few_times_week
  less_often_but_meaningful
}

enum PhotoReviewStatus {
  pending
  approved
  rejected
}

enum MatchState {
  proposed
  opened
  active
  meeting_proposed
  meeting_scheduled
  closed_clean_exit
  closed_timeout
  closed_mutual_no
  closed_mismatch
}

enum MeetingStatus {
  proposed
  scheduled
  completed
  canceled
}

enum MeetingLocationType {
  in_person
  video
}

enum PostMeetingFeeling {
  calm
  confused
  interested
  tired
}

enum RuleEventType {
  timeout_close
  suspension_start
  visibility_reduce
  warning_sent
}

model User {
  id               String     @id @default(cuid())
  name             String?
  email            String     @unique
  emailVerified    DateTime?
  image            String?
  status           UserStatus @default(active)
  suspensionEndsAt DateTime?
  visibilityScore  Float      @default(1.0)
  isAdmin          Boolean    @default(false)
  password         String?    // Hashed password for credentials provider
  createdAt        DateTime   @default(now())
  lastSeenAt       DateTime?

  profile          Profile?
  photos           Photo[]

  accounts         Account[]
  sessions         Session[]

  matchesA         Match[]    @relation("MatchUserA")
  matchesB         Match[]    @relation("MatchUserB")

  messages         Message[]
  meetingProposals Meeting[]  @relation("MeetingProposedBy")
  feedbacks        PostMeetingFeedback[]
  ruleEvents       RuleEvent[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Profile {
  userId                  String                   @id
  user                    User                     @relation(fields: [userId], references: [id], onDelete: Cascade)

  displayName             String?
  birthYear               Int?
  city                    String?
  lat                     Float?
  lng                     Float?

  lookingForNow           LookingForNow?
  conflictStyle           ConflictStyle?
  nonNegotiables          NonNegotiable[]
  goodRelationshipAnswer1 String?
  goodRelationshipAnswer2 String?
  goodRelationshipAnswer3 String?
  rhythmMeeting           RhythmMeeting?
  rhythmCommunication     RhythmCommunication?

  completionStatus        ProfileCompletionStatus  @default(incomplete)
  completedAt             DateTime?

  createdAt               DateTime                @default(now())
  updatedAt               DateTime                @updatedAt
}

model Photo {
  id           String           @id @default(cuid())
  userId       String
  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  url          String
  order        Int
  reviewStatus PhotoReviewStatus @default(pending)
  createdAt    DateTime         @default(now())

  @@unique([userId, order])
}

model Match {
  id            String      @id @default(cuid())
  userAId       String
  userBId       String
  userA         User        @relation("MatchUserA", fields: [userAId], references: [id], onDelete: Cascade)
  userB         User        @relation("MatchUserB", fields: [userBId], references: [id], onDelete: Cascade)

  state         MatchState  @default(proposed)
  weekBucket    String
  createdAt     DateTime    @default(now())
  expiresAt     DateTime
  lastMessageAt DateTime?
  lastActionAtA DateTime?
  lastActionAtB DateTime?

  conversation  Conversation?
  meeting       Meeting?
  feedbacks     PostMeetingFeedback[]
  ruleEvents    RuleEvent[]

  @@unique([userAId, userBId, weekBucket])
}

model Conversation {
  id                   String   @id @default(cuid())
  matchId              String   @unique
  match                Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)

  openingQuestionId    String
  userAOpeningAnswer   String?
  userBOpeningAnswer   String?
  chatEnabledAt        DateTime?

  messages             Message[]
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  senderId       String
  sender         User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  body           String
  createdAt      DateTime     @default(now())
}

model Meeting {
  id           String              @id @default(cuid())
  matchId      String              @unique
  match        Match               @relation(fields: [matchId], references: [id], onDelete: Cascade)

  proposedById String
  proposedBy   User                @relation("MeetingProposedBy", fields: [proposedById], references: [id], onDelete: Cascade)

  status       MeetingStatus       @default(proposed)
  scheduledAt  DateTime?
  locationType MeetingLocationType?
  createdAt    DateTime            @default(now())
}

model PostMeetingFeedback {
  id        String            @id @default(cuid())
  matchId   String
  match     Match             @relation(fields: [matchId], references: [id], onDelete: Cascade)

  userId    String
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  continue  Boolean
  feeling   PostMeetingFeeling
  createdAt DateTime          @default(now())

  @@unique([matchId, userId])
}

model RuleEvent {
  id        String        @id @default(cuid())
  userId    String?
  user      User?         @relation(fields: [userId], references: [id], onDelete: Cascade)

  matchId   String?
  match     Match?        @relation(fields: [matchId], references: [id], onDelete: Cascade)

  type      RuleEventType
  metadata  Json?
  createdAt DateTime      @default(now())
}
